@model FrameWorkRHP_Mono.Core.Models.DTO.DTOMMenus

@using (Html.BeginForm(null, null, FormMethod.Post, new { autocomplete = "off", id = "frmDetail" }))
{
    @Html.AntiForgeryToken()

    <div>
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="inputName">Menu Name</label>
                                        @Html.TextBoxFor(x => x.txtMenuName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Display Name</label>
                                        @Html.TextBoxFor(x => x.txtMenuDisplay, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Path Url</label>
                                        @Html.TextBoxFor(x => x.TxtUrl, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Icon Display</label>
                                        @Html.TextBoxFor(x => x.txtMenuIcon, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Parent Menu</label>
                                        <select id="idParentMenu" class="form-control select2bs4" style="width: 100%;"></select>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Active</label>
                                        @Html.CheckBoxFor(x => x.bitActive.Value, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div> 
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a href="~/MMenus/index" class="btn btn-secondary">Cancel</a>
                    <input id="btnSave" type="button" value="Create new Project" class="btn btn-success float-right"> 
                </div>
            </div>
        </section>
    </div>

}

 
<script src="~/jsform/master/mmenu/mmenusdetail.js"></script>