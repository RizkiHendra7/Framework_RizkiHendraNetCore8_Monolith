@model FrameWorkRHP_Mono.Core.Models.DTO.DTOMusers
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome --> 
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" /> 
    <!-- icheck bootstrap --> 
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" /> 
    <!-- Theme style --> 
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
</head>


@using (Html.BeginForm(new {@autocomplete = "off", @id = "frmDetail" }))
{
    @Html.AntiForgeryToken()
    <body class="hold-transition login-page">
        <div class="login-box"> 

            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a class="h1"><b>Admin</b>LTE</a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Sign in to start your session</p>
                     
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Txtusername, new { @class = "form-control"}) 
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(x => x.Txtpassword, new { @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">  
                        <div class="col-12">
                            <button type="button" id="idBtnSignIn" class="btn btn-primary btn-block">Sign In</button>
                        </div> 
                    </div> 

                   @*  <div class="social-auth-links text-center mt-2 mb-3">
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                        </a>
                    </div> *@
                    <!-- /.social-auth-links -->

                    <p class="mb-1">
                        <a href="forgot-password.html">I forgot my password</a>
                    </p> 
                </div> 
            </div> 
        </div>
    </body>
}
 
    <!-- jQuery --> 
    <script src="~/plugins/jquery/jquery.min.js"></script> 
    <!-- Bootstrap 4 --> 
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script> 
    <!-- AdminLTE App --> 
    <script src="~/dist/js/adminlte.min.js"></script> 
    <script src="~/jsform/login.js"></script> 
</html>
